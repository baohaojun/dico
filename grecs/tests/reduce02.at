AT_SETUP([Reduction: nested block statement])
AT_KEYWORDS([reduce reduce02])

GRECS_TEST([
block "a" {
  scalar a;
  foo 1;
  subblock {
    foo x;
    bar y;
  }
}
block "b" {
  foo 3;
  scalar b;
}
block "a" {
  scalar b;
  subblock {
    baz z;
    foo k;
  }
}  
],
[gcffmt -reduce],
[0],
[.block="b".foo: "3"
.block="b".scalar: "b"
.block="a".foo: "1"
.block="a".scalar: "b"
.block="a".subblock.bar: "y"
.block="a".subblock.baz: "z"
.block="a".subblock.foo: "k"
])

AT_CLEANUP

AT_SETUP(Locations: meta1)
AT_KEYWORDS([locus meta1 meta1-locus00])

AT_DATA([test.cf],[
string = val;
mstr = "multi"
       "line"
       " string";
list = { foo, bar,
         baz };
])

AT_CHECK([gcffmt -type=meta1 -locus test.cf],
[0],
[test.cf:2.1-12: .string: "val"
test.cf:3.1-5.16: .mstr: "multiline string"
test.cf:6.1-7.14: .list: ("foo", "bar", "baz")
])

AT_CLEANUP


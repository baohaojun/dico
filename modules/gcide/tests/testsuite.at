m4_include(testsuite.inc)
m4_pushdef([AT_DICOD],[
AT_DATA([input],dico_quote($1))
AT_CHECK([dnl
dicod --config $abs_builddir/dicod.conf --stderr -i < input 2>err | dnl
    tr -d '\r' | sed 's/^\(2[[25][0-9]]\) .*/\1/;s/ *$//' 
sed '/Notice: gcide_open_idx: creating index/d' err >&2],
[0],
[$2],
[$3])])

AT_INIT

AT_BANNER(General)
m4_include(markup.at)
m4_include(nopr.at)
m4_include(greek.at)
m4_include(idx.at)
m4_include(autoidx.at)

AT_BANNER([Dictionary info])
m4_include(descr.at)
m4_include(info.at)

AT_BANNER(Match)
m4_include(exact.at)
m4_include(prefix.at)
m4_include(all.at)

AT_BANNER(Define)
m4_include(def00.at)
m4_include(def01.at)
m4_include(def02.at)
m4_include(def04.at)
m4_include(def05.at)

m4_popdef([AT_DICOD])
